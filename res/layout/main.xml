<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TableLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableLayout1">
        <TableRow android:id="@+id/row1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:text="Discovery" android:layout_height="wrap_content" android:id="@+id/title"></TextView>
            <Button android:layout_height="wrap_content" android:id="@+id/modeSelect" android:layout_width="wrap_content" android:text="Mode"></Button>
            <Button android:layout_width="wrap_content" android:text="Discover" android:layout_height="wrap_content" android:id="@+id/discover"></Button>
            <Button android:layout_width="wrap_content" android:text="Stop" android:layout_height="wrap_content" android:id="@+id/stop"></Button>
            <Button android:layout_width="wrap_content" android:text="Info" android:layout_height="wrap_content" android:id="@+id/info"></Button>
            
        </TableRow>
        <ProgressBar android:layout_height="wrap_content" style="@android:style/Widget.ProgressBar.Horizontal" android:id="@+id/progress" android:layout_width="match_parent"></ProgressBar>
        
    </TableLayout>
    <TextView android:text="Results" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/results"></TextView>
</LinearLayout>
